<% if (site.tags.length){ %>
<section class="m_widget tagcloud">
    <div class="header">Tags</div>
    <div class='content'>
        <%- tagcloud(site.tags, {
            min_font: 14, 
            max_font: 18, 
            color: true, 
            start_color: 'gray', 
            end_color: 'black'
        }) %>
    </div>
</section>
<% } %>